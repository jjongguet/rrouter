<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
    <key>Label</key>
    <string>com.rrouter</string>

    <key>ProgramArguments</key>
    <array>
        <string>__HOME__/.local/bin/rrouter</string>
        <string>serve</string>
    </array>

    <key>EnvironmentVariables</key>
    <dict>
        <key>RROUTER_UPSTREAM</key>
        <string>http://localhost:8317</string>
        <key>RROUTER_PORT</key>
        <string>8316</string>
    </dict>

    <key>WorkingDirectory</key>
    <string>__HOME__</string>

    <key>RunAtLoad</key>
    <true/>

    <key>KeepAlive</key>
    <true/>

    <key>StandardErrorPath</key>
    <string>__HOME__/.rrouter/logs/rrouter.error.log</string>

    <key>ProcessType</key>
    <string>Background</string>
</dict>
</plist>
